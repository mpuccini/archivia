# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/archivia

# Authentication
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-me

# CORS Configuration
# Comma-separated list of allowed origins (no wildcards in production!)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=archivia-files
MINIO_SECURE=false

# Optional: METS Validation Service
# METS_VALIDATION_URL=http://localhost:8001/validate
